.share-page {
  padding: 60rpx 50rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.page-title {
  color: #000;
  font-size: 54rpx;
  font-weight: 500;
  align-self: flex-start;
  width: 100%;
  position: relative;
}
.share-body {
  width: 100%;
  margin-top: 32px;
  padding: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
  line-height: 36rpx;
}
.share-body .share-image {
  width: 375rpx;
  height: 300rpx;
  margin-top: 100rpx;
}
.share-body .share-title {
  margin-top: 100rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.share-body .share-content {
  color: #A6A6A6;
  margin-bottom: 10rpx;
}
.share-body .share-info {
  margin-top: 100rpx;
}
.share-body .btn-group {
  margin-top: 64rpx;
}